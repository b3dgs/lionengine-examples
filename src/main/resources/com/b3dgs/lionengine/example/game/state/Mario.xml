<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<lionengine:featurable xmlns:lionengine="http://lionengine.b3dgs.com/xsd/9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://lionengine.b3dgs.com/xsd/9 http://lionengine.b3dgs.com/xsd/9/featurable.xsd">
    <lionengine:class>com.b3dgs.lionengine.helper.EntityHelper</lionengine:class>
    <lionengine:features>
        <lionengine:feature>com.b3dgs.lionengine.example.game.state.EntityModel</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionengine.helper.EntityInputController</lionengine:feature>
    </lionengine:features>
    <lionengine:surface image="Mario.png"/>
    <lionengine:frames horizontal="7" vertical="1"/>
    <lionengine:size width="16" height="16"/>
    <lionengine:origin>CENTER_BOTTOM</lionengine:origin>
    <lionengine:animations>
        <lionengine:animation name="idle" start="1" end="1" speed="0.125" reversed="false" repeat="false"/>
        <lionengine:animation name="walk" start="4" end="6" speed="0.25" reversed="false" repeat="true"/>
        <lionengine:animation name="turn" start="7" end="7" speed="0.125" reversed="false" repeat="false"/>
        <lionengine:animation name="jump" start="3" end="3" speed="0.25" reversed="false" repeat="false"/>
        <lionengine:animation name="fall" start="3" end="3" speed="0.25" reversed="false" repeat="false"/>
    </lionengine:animations>
    <lionengine:input class="com.b3dgs.lionengine.awt.KeyboardController"/>
    <lionengine:state>com.b3dgs.lionengine.example.game.state.StateIdle</lionengine:state>
</lionengine:featurable>